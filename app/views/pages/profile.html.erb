<div class="card">
    <div class="image" id="profilepic">
        <%= image_tag user_avatar(current_user, 100), class: "rounded" %>
    </div>
    <div class="card-body">
        <h5 class="card-title"><%= current_user.username if current_user.username? %></h5>
        <p class="card-text"><%= current_user.bio if current_user.bio?  %></p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= current_user.email if current_user.email? %></li>
        <li class="list-group-item"><%= current_user.subject if current_user.subject? %></li>
        <li class="list-group-item"><%= current_user.karma if current_user.karma? %> Karma Points</li>
    </ul>
    <div class="card-body" id="edit_profile_card">
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'profile-edit-btn', :name => "btnAddMore", :type => "" %>
    </div>
</div>







