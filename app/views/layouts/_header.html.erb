
<head>
  <title>Header</title>
</head>
<!-- example 1 - using absolute position for center -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark ">

  <div class="navbar-collapse collapse" id="collapsingNavbar">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to 'Startseite', root_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Shop', shop_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Warenkorb', warenkorb_path, :class => 'nav-link' %>
      </li>
    </ul>
    <ul class="navbar-nav mx-auto">
      <li class="nav-item">
        <div class="container">
          <input type="checkbox"  id="darkSwitch">
          <div class="icon-box">
          <i class="fas fa-moon"></i>
          <label class="switch" for="darkSwitch"></label>
        </div>
        <%= javascript_pack_tag 'dark-mode-switch', 'data-turbolinks-track': 'reload' %>
        </div>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <!-- Vor- und Nachname bei Anmeldung noch abfragen, dann "Hi, Vorname" -->

        <font color="white">Hi, <strong><%= current_user.email %></strong>.</font>

        <% if current_page?('/profile/profile') %>

          <!-- no navbar item -->

        <% else %>

          <li class="nav-item">
            <%= link_to 'Profile', profile_profile_path, :class => 'nav-link' %>
          </li>
        <% end %>


        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link' %>
        </li>

      <% else %>

        <li class="nav-item">
          <%= link_to 'Sign Up ', root_path, :class => 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Login', root_path, :class => 'nav-link' %>
        </li>


    </ul>
  </div>

</nav>