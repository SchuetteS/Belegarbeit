<% @products.each do |product| %>

  <div class="row justify-content-center">
    <div class="col-3">
      <h4><%= product.title %></h4>
    </div>
    <div class="col-3">
      <h4><%= product.price %></h4>
    </div>
    <div class="col-3">
      <%= button_to 'Add to Cart', line_items_path(product_id: product), class: "button is-small" %>
    </div>
    <% if user_signed_in? %>
      <% if current_user.admin %>i
        <div class="col-3">
          <%= link_to 'Edit', edit_product_path(product), class: "button is-small" %>
          <%= link_to 'Delete', product, method: :delete, data: {confirm: "Are you sure ?"}, class: "button is-small" %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
